<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        layout_height="match_parent"
        layout_width="match_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible" >

        <TextView
            android:id="@+id/titulo"
            android:layout_width="273dp"
            android:layout_height="56dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:text="Noticias"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="277dp"
            android:layout_height="185dp"
            android:layout_marginTop="12dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titulo">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image_noticia1"
                    android:layout_width="62dp"
                    android:layout_height="49dp"
                    android:src="@android:drawable/btn_star_big_on"
                    app:srcCompat="@drawable/dashberlin_760x427" />

                <TextView
                    android:id="@+id/texto_noticia1"
                    android:layout_width="222dp"
                    android:layout_height="49dp"
                    android:gravity="center_vertical"
                    android:text="Dash Berlin presenta su nuevo disco"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image_noticia2"
                    android:layout_width="62dp"
                    android:layout_height="49dp"
                    android:src="@android:drawable/btn_star_big_on"
                    app:srcCompat="@drawable/arianagrande" />

                <TextView
                    android:id="@+id/texto_noticia2"
                    android:layout_width="222dp"
                    android:layout_height="49dp"
                    android:gravity="center_vertical"
                    android:text="Ariana Grande causa polémica"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image_noticia3"
                    android:layout_width="62dp"
                    android:layout_height="49dp"
                    android:src="@android:drawable/btn_star_big_on"
                    app:srcCompat="@drawable/mansion" />

                <TextView
                    android:id="@+id/texto_noticia3"
                    android:layout_width="222dp"
                    android:layout_height="49dp"
                    android:gravity="center_vertical"
                    android:text="Bono vende su mansión de Miami"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

            </TableRow>

        </LinearLayout>

        <TextView
            android:id="@+id/swagTitle"
            android:layout_width="274dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:text="Swag Shop"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.521"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="267dp"
            android:layout_height="151dp"
            android:layout_marginTop="12dp"
            app:columnCount="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.509"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/swagTitle"
            app:layout_constraintVertical_bias="0.0"
            app:rowCount="2">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/arianagrande" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/arianagrande" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/arianagrande" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/arianagrande" />
        </androidx.gridlayout.widget.GridLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>